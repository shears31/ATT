{% comment %}
Contact / CTA Section with email signup and contact info
{% endcomment %}

<section class="contact-cta-section">
  <div class="container">
    <h2 class="section-title">Stay in the Loop</h2>
    <p class="contact-subtitle">Get updates on new drops, exclusive offers, and golf style tips.</p>
    
    <div class="contact-content">
      <div class="email-signup">
        <form class="signup-form" action="#" method="post">
          <input type="email" placeholder="Enter your email" class="email-input" required />
          <button type="submit" class="btn-signup">Sign Up</button>
        </form>
      </div>
      
      <div class="contact-info">
        <div class="contact-item">
          <strong>Email:</strong> <a href="mailto:hello@attheturngolfco.com">hello@attheturngolfco.com</a>
        </div>
        <div class="contact-item">
          <strong>Instagram:</strong> <a href="https://instagram.com/attheturngolfco" target="_blank">@attheturngolfco</a>
        </div>
      </div>
      
      <div class="contact-buttons">
        <a href="#contact" class="btn-contact">Contact Us</a>
        <a href="#wholesale" class="btn-contact btn-outline">Wholesale Inquiries</a>
      </div>
    </div>
  </div>
</section>

